@using Microsoft.AspNetCore.Identity
@using BlazorSiliconApp.Data

@inject SignInManager<ApplicationUser> SignInManager

    @rendermode InteractiveAuto

<ul class="account-profile">
    <nav>
        <NavLink class="btn-theme-s" href="/account/details"> <i class="fa-sharp fa-regular fa-gear"></i> Account Details</NavLink>
        <NavLink @onclick="HandleSinOut" class="btn-gray"><i class="fa-duotone fa-arrow-right-from-bracket"></i> Sign out</NavLink>
    </nav>
</ul>

@code {
    private bool hasExternalLogins;

    protected override async Task OnInitializedAsync()
    {
        hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    }
    private Task HandleSinOut(MouseEventArgs e)
    {
        throw new NotImplementedException();
    }
}
